<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SvojiKomentariFragment">
  <LinearLayout
      android:id="@+id/osnova"
      android:orientation="vertical"
      android:layout_height="match_parent"
      android:layout_width="match_parent">
      <ImageView
          android:id="@+id/imageViewR3"
          android:layout_width="match_parent"
          android:layout_height="168dp"
          android:src="@drawable/elfaklogo" />

      <TextView
          android:id="@+id/textViewR10"
          style="@style/Naslov"
          android:layout_width="match_parent"
          android:layout_height="79dp"
          android:layout_gravity="center_horizontal"
          android:text="My Places"
          android:textAlignment="center"

          android:textSize="48sp" />

      <TextView
          android:id="@+id/textViewR3"
          android:layout_width="match_parent"
          android:layout_height="234dp"
          android:layout_marginBottom="15dp"
          android:gravity="center"
          android:text="Na ovoj stranici nalaze se svi komentari koje ste pisali "
          android:textSize="30sp"
          android:textStyle="bold" />


  </LinearLayout>


</ScrollView>