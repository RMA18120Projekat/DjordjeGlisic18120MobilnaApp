<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/textViewDobroDosaoHome"
        style="@style/Naslov"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:gravity="center"
        android:text="Dobro dosao"
        android:textAlignment="center"
        android:textSize="34sp" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ucitajImeSlika"
        android:visibility="gone"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profilna"
        android:layout_width="166dp"
        android:layout_height="107dp"
        android:layout_marginBottom="30dp"
        tools:src="@drawable/bonuspack_bubble" />

    <LinearLayout
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewKorisnikHome"
            style="@style/Naslov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"

            android:textSize="34sp"
            tools:text="Ime" />

        <TextView
            android:id="@+id/textViewKorisnikPrezime"
            style="@style/Naslov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="34sp"
            tools:text="Prezime" />
    </LinearLayout>


</LinearLayout>


    <Button
        android:id="@+id/buttonDodajObjekat"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:text="Dodaj Obejakat" />

    <Button
        android:id="@+id/buttonPretraziObjekat"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Pretrazi objekat" />

    <Button
        android:id="@+id/buttonVidiListuKorisnika"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:text="Vidi listu korisnika" />

    <Button
        android:id="@+id/buttonMojaMesta"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Vidi svoja omiljena mesta" />

    <ImageView
        android:id="@+id/imageViewMape"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:src="@drawable/osm_ic_center_map" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kliknite na slku da bi ste otvorili mapu"
        android:textAlignment="center"
        android:textSize="20sp" />


</LinearLayout>