<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:src="@drawable/elfaklogo" />


    <TextView
        android:id="@+id/textView10"
        style="@style/Naslov"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:text="My Places"
        android:textAlignment="center"

        android:textSize="48sp" />


    <ImageView
        android:id="@+id/slikaInfo"
        android:layout_width="295dp"
        android:layout_height="127dp"
        tools:src="@drawable/next" />

    <TextView
        android:id="@+id/infoKorisnicko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="imeprezime@gmail.com" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="133dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ime"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/infoIme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Marija" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prezime"

                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/infoPrezime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Glisic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="172dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Broj telefona"

                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/infoTelefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="0631158575" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broj osvojenih poena za sada"
        android:textSize="25sp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/infoBodovi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="90"
        android:textStyle="bold"
        android:textSize="30sp"/>

</LinearLayout>